<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>

<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <p>
      <%= link_to "Show this recipe", recipe %>
    </p>
  <% end %>
</div>
<td><%= image_tag recipe.image.url, class: "recipe-show" if recipe.image? %></td>

 
<%= link_to "New recipe", new_recipe_path %>
